{% extends 'base.html.twig' %}

{% block title %}{{event.name}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Evenement {{event.name}}</h1>

    <h2> {{event.name }} </h2>
    <div class="information">
        <p> <p><strong>Nom :</strong> {{event.date|date('d/m/Y')}} </p>
        <p> <p><strong>Position :</strong>{{event.locationX}} ; {{event.locationY}} </p>
        <p> <p><strong>Ville :</strong>{{event.ville}} </p>
    </div>
    <h2> Participants </h2>
<div class="informations">
    {% for participant in participants %}
        <div class="information">
            <p><strong>Nom :</strong> {{ participant.name }}</p>
            <p><strong>Email :</strong> {{ participant.email }}</p>
            <p><strong>Position :</strong> {{ participant.locationX }} / {{ participant.locationY }}</p>
            <p><strong>Ville :</strong> {{ participant.ville }}</p>
        </div>
    {% endfor %}
</div>

    <a href="{{ path('calculate_distance_to_event', { id: event.id }) }}">

        <button type="submit">Calculer distance</button>
    </a>

     <a href="{{ path('add_participant', { eventId: event.id }) }}">
        <button type="submit">Ajouter un participant</button>
    </a>
</div>
{% endblock %}